{{ 'component-spotlight-block.css' | asset_url | stylesheet_tag  }}
{{ 'component-muticolumn.css' | asset_url | stylesheet_tag  }}

{%- liquid
    assign as_grid_gap = section.settings.grid_gap
    assign grid_gap = section.settings.grid_gap | times: 0.5 | append: 'px'

    assign container = section.settings.container
    assign collection = section.settings.product_block_collection
    assign limit = section.settings.product_block_limit

    assign block_title = section.settings.product_block_title
    assign block_title_align = section.settings.title_align
    assign image_ratio = settings.product_block_image_ratio
    assign swipe_on_mobile = section.settings.product_block_swipe_on_mobile

    assign block_des = section.settings.description

-%}

<div class="product-block muticolumn section-block-{{section.id}}" style="--grid-gap: {{ grid_gap }}">
    <div class="{% if container == '1170' %}container-1170{% elsif container == '1770' %}container-1770{% elsif container == 'fullwidth'%}container-full{% elsif container == '1280'%}container-1280{% else %}container{% endif %}">
        {%- if block_title != blank -%}
            <div class="halo-block-header text-{{ block_title_align }} block-title--{{section.settings.style_block_header}}{% if section.settings.view_all != blank %} viewAll--{{ section.settings.view_all_align }} has-viewAll{% endif %}{% if section.settings.style_countdown == 'style_2' %} countdown_style_2{% endif %} {% if block_title_align == 'left' and  section.settings.view_all_align == 'right' and countdown == blank %}items-aligned{% endif %}">
                <h3 class="title">
                    <span class="text">{{ block_title | escape }}</span>
                </h3>

                {% if block_des != blank %}
                    <div class="description">{{ block_des }}</div>
                {% endif %}

                {% if section.settings.view_all != blank %}
                    <a class="view_all"{% if section.settings.link_view_all == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.link_view_all }}"{% endif %} title="{{ section.settings.view_all }}">
                        {%- if section.settings.icon_view_all -%}
                            <span class="icon-svg">
                                {{ section.settings.icon_view_all }}
                            </span>
                        {%- endif -%}
                        {{ section.settings.view_all }}
                    </a>
                {% endif %}
            </div>
        {%- endif -%}
        <div class="muticolumn__inner">
            {% for block in section.blocks %}
                {% liquid
                    assign desk_width = block.settings.column_width
                    assign mob_width = block.settings.mob_column_width
                    assign column_order = block.settings.column_order
                %}
                <div class="muticolumn__column"
                    style="
                        --column-width: {{ desk_width }}%;
                        --column-mob-width: {{ mob_width }}%;
                        --column-mob-order: {{ column_order }};
                    "
                >
                    <div class="muticolumn__content spotlight-item spotlight-item__{{block.type}}">
                        {% if block.settings.image_slide != blank %}
                            <div class="image-container">
                                <div class="img-box">
                                    {% if block.settings.image_slide != blank %}
                                        {%- liquid
                                            assign preview_img = block.settings.image
                                            assign image_height = block.settings.image_height
                                            assign image_ratio = 1 | divided_by: preview_img.aspect_ratio | times: 100 

                                            if image_height != blank
                                                assign image_ratio = image_height 
                                            endif
                                        -%}
                                        {% if block.settings.image_slide != blank %}
                                            {%- assign img_url = block.settings.image_slide -%}
                                            <div class="adaptive_height{% if block.settings.image_slide_mb != blank %} slide-pc{% endif %}" style="padding-top: {{ 1 | divided_by: img_url.aspect_ratio | times: 100 }}%">
                                                <a {% if block.settings.lb_product_1 != blank or block.settings.lb_product_2 != blank or block.settings.lb_product_3 != blank %}href="javascript:void(0)"{% elsif block.settings.link == blank %} role="link"aria-disabled="true"{% else %}href="{{ block.settings.link }}"{% endif %} class="slide-image">
                                                    <img {% if settings.enable_lazyload and forloop.first == false %}data-{% endif %}srcset="{%- if img_url.width >= 320 -%}{{ img_url | img_url: '375x' }} 375w,{%- endif -%}
                                                        {%- if img_url.width >= 740 -%}{{ img_url | image_url: width: 740 }} 740w,{%- endif -%} 
                                                        {%- if img_url.width >= 750 -%}{{ img_url | image_url: width: 750 }} 750w,{%- endif -%}
                                                        {%- if img_url.width >= 1100 -%}{{ img_url | image_url: width: 1100 }} 1100w,{%- endif -%}
                                                        {%- if img_url.width >= 1370 -%}{{ img_url | image_url: width: 1370 }} 1370w,{%- endif -%}
                                                        {%- if img_url.width >= 1500 -%}{{ img_url | image_url: width: 1500 }} 1500w,{%- endif -%}
                                                        {%- if img_url.width >= 1770 -%}{{ img_url | image_url: width: 1770 }} 1770w,{%- endif -%}
                                                        {%- if img_url.width >= 1780 -%}{{ img_url | image_url: width: 1780 }} 1780w,{%- endif -%}
                                                        {%- if img_url.width >= 1880 -%}{{ img_url | image_url: width: 1880 }} 1880w,{%- endif -%}
                                                        {%- if img_url.width >= 2000 -%}{{ img_url | image_url: width: 2000 }} 2000w,{%- endif -%}
                                                        {%- if img_url.width >= 2800 -%}{{ img_url | image_url: width: 2800 }} 2800w{%- endif -%}"
                                                        sizes="{% if section.settings.image != blank and section.settings.stack_images_on_mobile %}(min-width: 750px) 50vw, 100vw{% elsif section.settings.image != blank %}50vw{% else %}100vw{% endif %}"
                                                        {% unless settings.enable_lazyload and forloop.first == false %}src="{{ img_url | image_url: width: 750 }}"{% endunless %}
                                                        alt="{{ img_url.alt  | escape }}"
                                                        width="{{ img_url.width }}"
                                                        height="{{ img_url.width | divided_by: img_url.aspect_ratio }}"
                                                        {% if settings.enable_lazyload and forloop.first == false %}class="lazyload" loading="lazy"{% endif %}
                                                    >
                                                    {% if settings.enable_lazyload and forloop.first == false %}<span class="data-lazy-loading"></span>{% endif %}
                                                </a>
                                            </div>
                                        {% else %}
                                            <div class="not_img {% if block.settings.image_slide_mb != blank %} slide-pc{% endif %}" style="--height_not_img: 720px">
                                                1880 x 720px
                                            </div>
                                        {% endif %}
                                        {% if block.settings.image_slide_mb != blank %}
                                            {%- assign preview_img_mb = block.settings.image_slide_mb -%}
                                            {%- assign img_url_mb = block.settings.image_slide_mb -%}
                                            <div class="adaptive_height slide-mobile" style="padding-top: {{ 1 | divided_by: preview_img_mb.aspect_ratio | times: 100 }}%">
                                                <a {% if block.settings.lb_product_1 != blank or block.settings.lb_product_2 != blank or block.settings.lb_product_3 != blank %}href="javascript:void(0)"{% elsif block.settings.link == blank %} role="link"aria-disabled="true"{% else %}href="{{ block.settings.link }}"{% endif %} class="slide-image">
                                                    <img {% if settings.enable_lazyload and forloop.first == false %}data-{% endif %}srcset="{%- if img_url_mb.width >= 320 -%}{{ img_url_mb | img_url: '375x' }} 375w,{%- endif -%}
                                                        {%- if img_url_mb.width >= 750 -%}{{ img_url_mb | image_url: width: 750 }} 750w,{%- endif -%}
                                                        {%- if img_url_mb.width >= 1100 -%}{{ img_url_mb | image_url: width: 1100 }} 1100w,{%- endif -%}
                                                        {%- if img_url_mb.width >= 1370 -%}{{ img_url_mb | image_url: width: 1370 }} 1370w,{%- endif -%}
                                                        {%- if img_url_mb.width >= 1500 -%}{{ img_url_mb | image_url: width: 1500 }} 1500w,{%- endif -%}
                                                        {%- if img_url_mb.width >= 1780 -%}{{ img_url_mb | image_url: width: 1780 }} 1780w,{%- endif -%}
                                                        {%- if img_url_mb.width >= 2000 -%}{{ img_url_mb | image_url: width: 2000 }} 2000w,{%- endif -%}
                                                        {%- if img_url_mb.width >= 2800 -%}{{ img_url_mb | image_url: width: 2800 }} 2800w{%- endif -%}"
                                                        sizes="{% if section.settings.image != blank and section.settings.stack_images_on_mobile %}(min-width: 750px) 50vw, 100vw{% elsif section.settings.image != blank %}50vw{% else %}100vw{% endif %}"
                                                        {% unless settings.enable_lazyload %}src="{{ img_url_mb | image_url: width: 750 }}"{% endunless %}
                                                        alt="{{ img_url_mb.alt | escape }}"
                                                        width="{{ img_url_mb.width }}"
                                                        height="{{ img_url_mb.width | divided_by: img_url_mb.aspect_ratio }}"
                                                        {% if settings.enable_lazyload and forloop.first == false %}class="lazyload" loading="lazy"{% endif %}
                                                    >
                                                    {% if settings.enable_lazyload and forloop.first == false %}<span class="data-lazy-loading"></span>{% endif %}
                                                </a>
                                            </div>
                                        {% endif %}
                                        {% if settings.enable_lazyload %}<span class="data-lazy-loading"></span>{% endif %}
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}
                        {%- if block.settings.sub_title != blank or block.settings.title != blank or block.settings.des != blank or block.settings.button != blank -%}
                            <div class="content spotlight-inner text-{{block.settings.title_align}} align-items--{{block.settings.align_items}} {% if section.settings.enable_content_border %}is-bordered{%  endif %} {% if block.settings.title == blank and block.settings.des == blank %} not_title_des{% endif %}{% unless block.settings.enable_image %} not-image{% endunless %}{% if block.settings.border_color_button == 'rgba(0,0,0,0)' and block.settings.bg_color_button == 'rgba(0,0,0,0)' %} enable-transparnet{% endif %}" 
                            style="--align-items-spacing-top-style: {{ block.settings.align_items_spacing_top | append: 'px' }}; 
                                    --align-items-spacing-bottom-style: {{ block.settings.align_items_spacing_bottom | append: 'px' }}; 
                                    --align-items-spacing-lr-style: {{ block.settings.align_items_spacing_lr | append: 'px' }};
                                    --align-items-postion-content-style: {{ block.settings.align_items_spacing_top_bottom_position | append: 'px' }};
                                    --align-items-postion-content-mb-style: {{ block.settings.align_items_spacing_top_bottom_position_mb | append: 'px' }};
                                    --bg_color_content: {{ block.settings.bg_color_content }};
                                    --content-border-color: {% if section.settings.content_border_color != blank and section.settings.content_border_color != 'rgba(0,0,0,0)' %}{{ section.settings.content_border_color }}{% endif %};"
                            >
                                {%- if block.settings.sub_title != blank -%}
                                    <p class="sub_title custom-text-style{% if block.settings.border_sub_title %} has-border{% endif %}"
                                        style="--color-text-style: {{ block.settings.color_sub_title }};
                                            --fontsize-text-style: {{ block.settings.fontsize_sub_title | append: 'px' }};
                                            --font-weight-text-style: {{ block.settings.font_weight_sub_title }};
                                            --mg-bottom-sub-title-style: {{ block.settings.mg_bottom_sub_title | append: 'px' }}">
                                        <span>{{ block.settings.sub_title }}</span>
                                    </p>
                                {%- endif -%}
                                {%- if block.settings.title != blank -%}
                                    <h3 class="title custom-text-style has--{{ block.settings.border_title }}"
                                        style="--color-text-style: {{ block.settings.color_title }};
                                            --fontsize-text-style: {{ block.settings.fontsize_title | append: 'px' }};
                                            --fontsize-mobile-text-style: {{ block.settings.fontsize_title_mb | append: 'px' }};
                                            --font-text-style: {%- if block.settings.enable_style_italic -%}italic{%- else -%}normal{%- endif -%};
                                            {%- if block.settings.border_title == 'border_s1' -%}
                                                padding-bottom: 7px;
                                                border-bottom: 3px solid {{ block.settings.border_color_title }};
                                            {%- elsif block.settings.border_title == 'border_hover' or block.settings.border_title == 'border_s2' -%}
                                                --border-color-title-style: {{ block.settings.border_color_title }};
                                            {%- elsif block.settings.border_title == 'none' -%}
                                                --border-color-title-style: transparent;
                                                {% elsif  block.settings.border_title == 'border_s3' %}
                                                --border-color-title-style: transparent;
                                                padding-bottom: 22px;
                                            {%- endif -%}">
                                        <a {% if block.settings.link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.link }}"{% endif %}
                                            class="link_title 
                                            {% if block.settings.border_title == 'border_s3' %}has_border_s3{% endif %}"
                                            {% if block.settings.border_title == 'border_s3' %}style="--border-color-title-style-3: {{ block.settings.border_color_title }};"{% endif %}
                                        >
                                            <span>{{ block.settings.title }}</span>
                                        </a>
                                    </h3>
                                {%- endif -%}
                                {%- if block.settings.des != blank -%}
                                    <div class="des custom-text-style"
                                        style="--color-text-style: {{ block.settings.color_des }};
                                            --fontsize-text-style: {{ block.settings.fontsize_des | append: 'px' }};
                                            --margin-top-des-style: {{ block.settings.mg_top_des | append: 'px' }}">
                                    {{ block.settings.des }}
                                    </div>
                                {%- endif -%}
                                {%- if block.settings.button != blank -%}
                                    <a {% if block.settings.link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.link }}"{% endif %} class="spotlight-button button custom-button-style{% if block.settings.enable_button_custom_border %} enable-button-custom-border{% endif %}{% if block.settings.border_color_button == 'rgba(0,0,0,0)' and block.settings.bg_color_button == 'rgba(0,0,0,0)' %} enable-transparnet{% endif %}" 
                                        style="--color-button-style: {{ block.settings.color_button }};
                                            --bg-color-button-style: {% if block.settings.color_button != blank %}{{ block.settings.bg_color_button_gradient }}{% else %}{{ block.settings.bg_color_button | color_modify: 'alpha', block.settings.bg_opacity_button }}{% endif %};
                                            --border-color-button-style: {{ block.settings.border_color_button }};
                                            --color-button-hover-style: {{ block.settings.color_button_hover }};
                                            --bg-color-button-hover-style: {% if block.settings.bg_color_button_gradient_hover != blank %}{{ block.settings.bg_color_button_gradient_hover }}{% else %}{{ block.settings.bg_color_button_hover }}{% endif %}; 
                                            --bg-color-button: {{ block.settings.bg_color_button }};
                                            --border-color-button-hover-style: {{ block.settings.border_color_button_hover }};
                                            --text-transform-button-style: {{block.settings.btn_text_transform}};
                                            --font-size-button-style: {{block.settings.fontsize_btn | append: 'px' }};
                                            --margin-top-button-style: {{block.settings.mg_top_btn | append: 'px' }};
                                            --button-width-style: {{block.settings.button_width | append: 'px' }}">
                                        {%- if block.settings.btn_icon != blank -%}
                                            {{ block.settings.btn_icon }}
                                        {%- endif -%}
                                        <span>{{ block.settings.button | strip}}</span>
                                    </a>
                                {%- endif -%}
                            </div>
                        {%- endif -%}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

<style>
    {%- liquid
        assign product_bg = section.settings.product_bg
        assign product_bg_gradient = section.settings.product_bg_gradient
        assign product_bg_image = section.settings.product_bg_image
        assign decore_bg_image = section.settings.decore_bg_image

        assign color_title = section.settings.color_title
        assign border_color_title = section.settings.border_color_title
        assign pd_top_title = section.settings.pd_top_title
        assign fontsize_title = section.settings.fontsize_title
        assign fontsize_title_mb = section.settings.fontsize_title_mb
        assign product_button_width = section.settings.product_button_width
        assign pd_top_product_button = section.settings.pd_top_product_button
        assign pd_bottom_product_button = section.settings.pd_bottom_product_button

        assign color_des    = section.settings.color_des
        assign fontsize_des = section.settings.fontsize_des
        assign mg_top_des   = section.settings.mg_bottom_des_mb

        assign mg_bottom_title = section.settings.mg_bottom_title
        assign mg_bottom_title_mb = section.settings.mg_bottom_title_mb
        assign mg_bottom_view = section.settings.mg_bottom_view
        assign mg_bottom_view_mb = section.settings.mg_bottom_view_mb

        assign color_view_all = section.settings.color_view_all
        assign color_view_all_icon = section.settings.color_view_all_icon
        assign font_weight_view_all = section.settings.font_weight_view_all

        assign color_button = section.settings.color_button
        assign bg_color_button = section.settings.bg_color_button
        assign border_color_button = section.settings.border_color_button
        assign bg_color_gradient_button = section.settings.bg_color_gradient_button

        assign color_button_hover = section.settings.color_button_hover
        assign bg_color_button_hover = section.settings.bg_color_button_hover
        assign border_color_button_hover = section.settings.border_color_button_hover
        assign bg_color_gradient_button_hover = section.settings.bg_color_gradient_button_hover

        assign mg_top_desktop = section.settings.mg_top_desktop
        assign mg_top_tablet = section.settings.mg_top_tablet
        assign mg_top_mobile = section.settings.mg_top_mobile

        assign mg_bottom_desktop = section.settings.mg_bottom_desktop
        assign mg_bottom_tablet = section.settings.mg_bottom_tablet
        assign mg_bottom_mobile = section.settings.mg_bottom_mobile

        assign spacing_top_dots = section.settings.spacing_top_dots

        assign padding_full_width = section.settings.padding_full_width

        assign mg_bottom_button = section.settings.mg_bottom_button
        assign enable_border_top = section.settings.enable_border_top
        assign enable_border_bottom = section.settings.enable_border_bottom
        assign color_border_bottom = section.settings.color_border_bottom
        assign border_height = section.settings.border_height

        assign button_text_font_size = section.settings.button_text_font_size
        assign button_text_font_weight = section.settings.button_text_font_weight
        assign button_text_text_transform = section.settings.button_text_text_transform

        assign collection_color = section.settings.collection_color
        assign collection_color_hover = section.settings.collection_color_hover
        assign collection_bg_color = section.settings.collection_bg_color
        assign collection_bg_color_gradient = section.settings.collection_bg_color_gradient

        assign position_vertical_arrow = section.settings.position_vertical_arrow
    -%}


    {%- if section.settings.style_block_header == 'style2' -%}
        .section-block-{{section.id}} .halo-block-header {
            margin-bottom: {{ mg_bottom_view | append: 'px' }};
        }
    {%- endif -%}

    {% if show_banner %}
        .section-block-{{section.id}} .product-block__cap--text {
            color: {{ color_text }};
            font-size: {{ fontsize_text | append: 'px' }};
            margin-bottom: {{ mg_bottom_text | append:'px' }};
        }

        .section-block-{{section.id}} .product-block__cap--subText {
            color: {{ color_sub_text }};
            font-size: {{ fontsize_sub_text | append: 'px' }};
            margin-top: 0;
            margin-bottom: {{ mg_bottom_sub_text | append:'px' }};
            line-height: {{ fontsize_sub_text | append: 'px' }};
        }

        .section-block-{{section.id}} .product-block__cap--description {
            color: {{ color_description }};
            font-size: {{ fontsize_description | append: 'px' }};
        }

        .section-block-{{section.id}} .product-block__cap--button a {
            color: {{ button_color }};
            background: {% if button_bg_color_gradient != blank %}{{ button_bg_color_gradient }}{% else %}{{ button_bg_color }}{% endif %};
            border: 1px solid {{ button_border_color }};
        }

        .section-block-{{section.id}} .product-block__cap--button a:hover {
            color: {{ button_color_hover }};
            background: {% if button_bg_color_gradient_hover != blank %}{{ button_bg_color_gradient_hover }}{% else %}{{ button_bg_color_hover }}{% endif %};
            border: 1px solid {{ button_border_color_hover }};
        }

        .product-block-has__banner .product-block__banner figure img,
        .product-block-has__banner .product-block__image,
        .product-block-has__banner .product-block__banner figure{
            border-radius: {{ banner_border_radius | append: 'px' }};
        }

        .product-block-has__banner .product-block__banner .video-open-popup a {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 2;
            line-height: 0;
            padding: 10px 20px;
            border-radius: 5px;
            background: var(--bg_color);
            color: var(--color);
        }

        .product-block-has__banner .product-block__banner .video-open-popup.custom_position a {
            top: var(--top);
            left: var(--left);
        }

        .product-block-has__banner .product-block__banner .video-open-popup.icon_style_2 a {
            padding: 0;
        }

        .product-block-has__banner .product-block__banner .video-open-popup svg {
            width: 85px;
            height: 85px;
            fill: currentColor;
            stroke: currentColor;
        }

        .product-block-has__banner .product-block__banner .video-open-popup.icon_style_2 svg {
            width: 96px;
            height: 96px;
        }

        @media (max-width: 1199px) {
            .section-block-{{section.id}} .product-block__cap--text {
                margin-bottom: 20px;
            }

            .section-block-{{section.id}} .product-block__cap--subText {
                font-size: {{ fontsize_sub_text_mb | append: 'px' }};
                line-height: {{ fontsize_sub_text_mb | append: 'px' }};
                margin-bottom: 25px;
            }
        }

        @media (max-width: 991px) {
            .product-block-has__banner .product-block__banner figure {
                max-width: 100% !important;
            }
        }

        @media (max-width: 767px){
            .section-block-{{section.id}} .product-block__cap--text {
                font-size: {{ fontsize_text_mb | append: 'px' }};
            }

            .product-block__banner.pd--style2.not-img .product-block__cap--text{
                margin-bottom: 11px;
            }

            .product-block__banner.pd--style2.not-img .product-block__cap--subText{
                margin-bottom: 15px;
            }
        }

        @media (min-width: {{ settings.body_custom_width_size | plus:100 | append: 'px' }}) and (max-width: 1920px) {
            .body-custom-width .product-block-has__banner.has__banner--left .product-block__grid,
            .body-custom-width .product-block-has__banner.has__banner--right .product-block__grid {
                padding-right: 60px;
                padding-left: 60px;
            }            
        }

        @media (min-width: 1921px) {
            .body-custom-width .product-block-has__banner.has__banner--left .product-block__grid,
            .body-custom-width .product-block-has__banner.has__banner--right .product-block__grid {
                padding-right: 100px;
                padding-left: 100px;
            }
        }

        @media (min-width: {{ settings.body_custom_width_size | append: 'px' }}) and (max-width: 1920px) {
            .body-custom-width .product-block-has__banner.has__banner--left .product-block__grid {
                padding-right: calc((100% - var(--body-custom-width-container) + 30px) / 2);
            }

            .body-custom-width .product-block-has__banner.has__banner--right .product-block__grid {
                padding-left: calc((100% - var(--body-custom-width-container) + 30px) / 2);
            }
        }

        @media (min-width: 1921px) {
            .body-custom-width .product-block-has__banner.has__banner--left .product-block__grid {
                padding-right: 6%;
            }

            .body-custom-width .product-block-has__banner.has__banner--right .product-block__grid {
                padding-left: 6%;
            }
        }
    {% endif %}

    {%- if section.settings.enable_layout_special -%}
        .section-block-{{section.id}} .product-item {
            background-color: {{ bg_card }};
            padding: {{ padding_card | append: 'px' }};
            border-radius: {{ border_radius_card | append: 'px' }};
            border{% unless section.settings.border_layout_card == 'full' %}-bottom{% endunless %}: {{ border_width_card | append: 'px' }} solid {{ border_color_card }}
        }
    {%- endif -%}

    {% if infinite_scroll %}
        .section-block-{{section.id}} .product-infinite-scroll {
            margin-top: {{ mg_bottom_button | append: 'px' }};
